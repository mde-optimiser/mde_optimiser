<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>uk.ac.kcl.mdeoptimise.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/statusdashboard/greet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>mdeoServlet</servlet-name>
    <servlet-class>uk.ac.kcl.mdeoptimise.server.MDEOServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>mdeoServlet</servlet-name>
    <url-pattern>/statusdashboard/mdeo</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>MDEOStatusDashboard.html</welcome-file>
  </welcome-file-list>

</web-app>
